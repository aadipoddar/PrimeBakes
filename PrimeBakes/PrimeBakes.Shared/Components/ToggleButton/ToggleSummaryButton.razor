<button class="btn-toggle-summary @(ShowSummary ? "active" : "")" @onclick="HandleClick"
        title="@(ShowSummary ? "Show Detailed Transactions" : "Show Consolidated Summary")" disabled="@Disabled">
    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor"
         stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        @if (ShowSummary)
        {
            <line x1="8" y1="6" x2="21" y2="6" />
            <line x1="8" y1="12" x2="21" y2="12" />
            <line x1="8" y1="18" x2="21" y2="18" />
            <line x1="3" y1="6" x2="3.01" y2="6" />
            <line x1="3" y1="12" x2="3.01" y2="12" />
            <line x1="3" y1="18" x2="3.01" y2="18" />
        }
        else
        {
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
            <line x1="3" y1="9" x2="21" y2="9" />
            <line x1="3" y1="15" x2="21" y2="15" />
            <line x1="9" y1="3" x2="9" y2="21" />
        }
    </svg>
    @(ShowSummary ? "Show Details" : "Show Summary")
</button>

<style>
    .btn-toggle-summary {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        height: 38px;
        padding: 0 20px;
        border: 1px solid rgba(226, 232, 240, 0.4);
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(248, 250, 252, 0.7) 100%);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border-radius: 10px;
        font-size: 13px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        color: #64748b;
        box-shadow: 0 1px 4px rgba(0, 0, 0, 0.05), inset 0 1px 1px rgba(255, 255, 255, 0.8);
        position: relative;
        overflow: hidden;
    }

        .btn-toggle-summary::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 50%;
            background: linear-gradient(180deg, rgba(255, 255, 255, 0.4) 0%, rgba(255, 255, 255, 0) 100%);
            border-radius: 10px 10px 0 0;
            pointer-events: none;
        }

        .btn-toggle-summary:hover:not(:disabled) {
            background: linear-gradient(135deg, rgba(250, 245, 255, 0.9) 0%, rgba(243, 232, 255, 0.7) 100%);
            border-color: rgba(168, 85, 247, 0.4);
            color: #a855f7;
            box-shadow: 0 2px 8px rgba(168, 85, 247, 0.2), 0 4px 16px rgba(168, 85, 247, 0.1), inset 0 1px 1px rgba(255, 255, 255, 0.9);
            transform: translateY(-2px) scale(1.01);
        }

        .btn-toggle-summary.active {
            background: linear-gradient(135deg, rgba(168, 85, 247, 0.9) 0%, rgba(147, 51, 234, 0.85) 100%);
            border-color: rgba(255, 255, 255, 0.2);
            color: #ffffff;
            box-shadow: 0 2px 8px rgba(168, 85, 247, 0.3), 0 4px 16px rgba(168, 85, 247, 0.2), inset 0 1px 1px rgba(255, 255, 255, 0.3);
        }

            .btn-toggle-summary.active::before {
                background: linear-gradient(180deg, rgba(255, 255, 255, 0.25) 0%, rgba(255, 255, 255, 0) 100%);
            }

            .btn-toggle-summary.active:hover:not(:disabled) {
                background: linear-gradient(135deg, rgba(147, 51, 234, 0.95) 0%, rgba(126, 34, 206, 0.9) 100%);
                box-shadow: 0 3px 12px rgba(168, 85, 247, 0.4), 0 6px 24px rgba(168, 85, 247, 0.25), inset 0 1px 1px rgba(255, 255, 255, 0.4);
                transform: translateY(-2px) scale(1.01);
            }

        .btn-toggle-summary:active:not(:disabled) {
            transform: translateY(0) scale(0.99);
            box-shadow: 0 1px 4px rgba(168, 85, 247, 0.2), inset 0 1px 1px rgba(255, 255, 255, 0.2);
            transition: all 0.1s ease;
        }

        .btn-toggle-summary:disabled {
            opacity: 0.5;
            cursor: not-allowed;
            transform: none;
            backdrop-filter: blur(10px);
        }

            .btn-toggle-summary:disabled:hover {
                background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(248, 250, 252, 0.7) 100%);
                border-color: rgba(226, 232, 240, 0.4);
                color: #64748b;
                box-shadow: 0 1px 4px rgba(0, 0, 0, 0.05), inset 0 1px 1px rgba(255, 255, 255, 0.8);
                transform: none;
            }

        .btn-toggle-summary svg {
            flex-shrink: 0;
        }
</style>