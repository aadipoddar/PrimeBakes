<button class="btn-toggle-transfers @(ShowTransfers ? "active" : "")" @onclick="HandleClick"
        title="@(ShowTransfers ? "Hide Transfers" : "Show Transfers")" disabled="@Disabled">
    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor"
         stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="17 2 21 6 17 10" />
        <path d="M3 14v-2a4 4 0 0 1 4-4h14" />
        <polyline points="7 22 3 18 7 14" />
        <path d="M21 10v2a4 4 0 0 1-4 4H3" />
    </svg>
    @(ShowTransfers ? "Hide Transfers" : "Show Transfers")
</button>

<style>
    .btn-toggle-transfers {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        height: 38px;
        padding: 0 20px;
        border: 1px solid rgba(226, 232, 240, 0.4);
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(248, 250, 252, 0.7) 100%);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border-radius: 10px;
        font-size: 13px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        color: #64748b;
        box-shadow: 0 1px 4px rgba(0, 0, 0, 0.05), inset 0 1px 1px rgba(255, 255, 255, 0.8);
        position: relative;
        overflow: hidden;
    }

        .btn-toggle-transfers::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 50%;
            background: linear-gradient(180deg, rgba(255, 255, 255, 0.4) 0%, rgba(255, 255, 255, 0) 100%);
            border-radius: 10px 10px 0 0;
            pointer-events: none;
        }

        .btn-toggle-transfers:hover:not(:disabled) {
            background: linear-gradient(135deg, rgba(240, 249, 255, 0.9) 0%, rgba(224, 242, 254, 0.7) 100%);
            border-color: rgba(14, 165, 233, 0.4);
            color: #0ea5e9;
            box-shadow: 0 2px 8px rgba(14, 165, 233, 0.2), 0 4px 16px rgba(14, 165, 233, 0.1), inset 0 1px 1px rgba(255, 255, 255, 0.9);
            transform: translateY(-2px) scale(1.01);
        }

        .btn-toggle-transfers.active {
            background: linear-gradient(135deg, rgba(14, 165, 233, 0.9) 0%, rgba(2, 132, 199, 0.85) 100%);
            border-color: rgba(255, 255, 255, 0.2);
            color: #ffffff;
            box-shadow: 0 2px 8px rgba(14, 165, 233, 0.3), 0 4px 16px rgba(14, 165, 233, 0.2), inset 0 1px 1px rgba(255, 255, 255, 0.3);
        }

            .btn-toggle-transfers.active::before {
                background: linear-gradient(180deg, rgba(255, 255, 255, 0.25) 0%, rgba(255, 255, 255, 0) 100%);
            }

            .btn-toggle-transfers.active:hover:not(:disabled) {
                background: linear-gradient(135deg, rgba(2, 132, 199, 0.95) 0%, rgba(3, 105, 161, 0.9) 100%);
                box-shadow: 0 3px 12px rgba(14, 165, 233, 0.4), 0 6px 24px rgba(14, 165, 233, 0.25), inset 0 1px 1px rgba(255, 255, 255, 0.4);
                transform: translateY(-2px) scale(1.01);
            }

        .btn-toggle-transfers:active:not(:disabled) {
            transform: translateY(0) scale(0.99);
            box-shadow: 0 1px 4px rgba(14, 165, 233, 0.2), inset 0 1px 1px rgba(255, 255, 255, 0.2);
            transition: all 0.1s ease;
        }

        .btn-toggle-transfers:disabled {
            opacity: 0.5;
            cursor: not-allowed;
            transform: none;
            backdrop-filter: blur(10px);
        }

            .btn-toggle-transfers:disabled:hover {
                background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(248, 250, 252, 0.7) 100%);
                border-color: rgba(226, 232, 240, 0.4);
                color: #64748b;
                transform: none;
            }

        .btn-toggle-transfers svg {
            flex-shrink: 0;
        }
</style>