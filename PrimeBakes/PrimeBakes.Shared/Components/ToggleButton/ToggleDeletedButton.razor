<button class="btn-toggle-deleted @(ShowDeleted ? "active" : "")" @onclick="HandleClick"
        title="@(ShowDeleted ? "Hide Deleted Items" : "Show Deleted Items")" disabled="@Disabled">
    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor"
         stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="3 6 5 6 21 6" />
        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />
        <line x1="10" y1="11" x2="10" y2="17" />
        <line x1="14" y1="11" x2="14" y2="17" />
    </svg>
    @(ShowDeleted ? "Hide Deleted" : "Show Deleted")
</button>

<style>
    .btn-toggle-deleted {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        height: 38px;
        padding: 0 20px;
        border: 1px solid rgba(226, 232, 240, 0.4);
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(248, 250, 252, 0.7) 100%);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border-radius: 10px;
        font-size: 13px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        color: #64748b;
        box-shadow: 0 1px 4px rgba(0, 0, 0, 0.05), inset 0 1px 1px rgba(255, 255, 255, 0.8);
        position: relative;
        overflow: hidden;
    }

        .btn-toggle-deleted::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 50%;
            background: linear-gradient(180deg, rgba(255, 255, 255, 0.4) 0%, rgba(255, 255, 255, 0) 100%);
            border-radius: 10px 10px 0 0;
            pointer-events: none;
        }

        .btn-toggle-deleted:hover:not(:disabled) {
            background: linear-gradient(135deg, rgba(255, 247, 237, 0.9) 0%, rgba(254, 243, 199, 0.7) 100%);
            border-color: rgba(249, 115, 22, 0.4);
            color: #f97316;
            box-shadow: 0 2px 8px rgba(249, 115, 22, 0.2), 0 4px 16px rgba(249, 115, 22, 0.1), inset 0 1px 1px rgba(255, 255, 255, 0.9);
            transform: translateY(-2px) scale(1.01);
        }

        .btn-toggle-deleted.active {
            background: linear-gradient(135deg, rgba(249, 115, 22, 0.9) 0%, rgba(234, 88, 12, 0.85) 100%);
            border-color: rgba(255, 255, 255, 0.2);
            color: #ffffff;
            box-shadow: 0 2px 8px rgba(249, 115, 22, 0.3), 0 4px 16px rgba(249, 115, 22, 0.2), inset 0 1px 1px rgba(255, 255, 255, 0.3);
        }

            .btn-toggle-deleted.active::before {
                background: linear-gradient(180deg, rgba(255, 255, 255, 0.25) 0%, rgba(255, 255, 255, 0) 100%);
            }

            .btn-toggle-deleted.active:hover:not(:disabled) {
                background: linear-gradient(135deg, rgba(234, 88, 12, 0.95) 0%, rgba(194, 65, 12, 0.9) 100%);
                box-shadow: 0 3px 12px rgba(249, 115, 22, 0.4), 0 6px 24px rgba(249, 115, 22, 0.25), inset 0 1px 1px rgba(255, 255, 255, 0.4);
                transform: translateY(-2px) scale(1.01);
            }

        .btn-toggle-deleted:active:not(:disabled) {
            transform: translateY(0) scale(0.99);
            box-shadow: 0 1px 4px rgba(249, 115, 22, 0.2), inset 0 1px 1px rgba(255, 255, 255, 0.2);
            transition: all 0.1s ease;
        }

        .btn-toggle-deleted:disabled {
            opacity: 0.5;
            cursor: not-allowed;
            transform: none;
            backdrop-filter: blur(10px);
        }

            .btn-toggle-deleted:disabled:hover {
                background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(248, 250, 252, 0.7) 100%);
                border-color: rgba(226, 232, 240, 0.4);
                color: #64748b;
                transform: none;
            }

        .btn-toggle-deleted svg {
            flex-shrink: 0;
        }
</style>