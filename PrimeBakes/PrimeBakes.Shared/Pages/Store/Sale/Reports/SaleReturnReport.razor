                        <GridColumn Field="@nameof(SaleReturnOverviewModel.LastModifiedFromPlatform)" HeaderText="Modified Platform" Width="200" Visible="@(_showAllColumns && !_showSummary)" />
                    </GridColumns>
                </SfGrid>
            </div>
