@attribute [Route(PageRouteNames.Kitchen)]

@using PrimeBakesLibrary.Models.Inventory.Kitchen

<PageTitle>Kitchen Management - Prime Bakes</PageTitle>

@if (_isLoading || _user is null)
{
	<AnimatedLoader Visible="true" />
}
else
{
	<div class="page-shell">
		<Header Title="Kitchen Management" Subtitle="Manage Kitchen Details" ShowLogout="true" ShowHome="true" ShowBack="true" OnHomeClick="NavigateToDashboard" OnBackClick="NavigateBack" OnLogoutClick="Logout">
			<RightContent>
				<IconButton Icon="IconType.Excel" Variant="ButtonVariant.Excel" Title="Export to Excel (Ctrl + E)" Disabled="_isProcessing" OnClick="ExportExcel" />
				<IconButton Icon="IconType.Pdf" Variant="ButtonVariant.Pdf" Title="Export to PDF (Ctrl + P)" Disabled="_isProcessing" OnClick="ExportPdf" />
				<IconButton Icon="IconType.Save" Variant="ButtonVariant.Save" Title="Save Kitchen (Ctrl + S)" Disabled="_isProcessing" OnClick="SaveKitchen" />
				<IconButton Icon="IconType.New" Title="New Kitchen (Ctrl + N)" Disabled="_isProcessing" OnClick="ResetPage" />
			</RightContent>
		</Header>

		<!-- Main Content Container -->
		<div class="page-container">

			<!-- Kitchen Entry Section -->
			<div class="section-card">
				<div class="section-header">
					<div class="section-title-wrapper">
						<svg class="section-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"
							 fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<path d="M3 15v4c0 1.1.9 2 2 2h14a2 2 0 0 0 2-2v-4M17 9l-5 5-5-5M12 12.8V2.5" />
						</svg>
						<h2 class="section-title">Kitchen Details</h2>
					</div>
				</div>
				<div class="section-body">
					<div class="form-grid">
						<!-- Kitchen Name -->
						<div class="form-field">
							<label class="field-label">
								Kitchen Name <span class="required">*</span>
							</label>
							<SfTextBox @bind-Value="_kitchen.Name" Placeholder="Enter kitchen name"
									   FloatLabelType="FloatLabelType.Never" CssClass="custom-textbox" />
						</div>

						<!-- Remarks -->
						<div class="form-field form-field-span-2">
							<label class="field-label">Remarks</label>
							<SfTextBox @bind-Value="_kitchen.Remarks" Placeholder="Enter remarks (optional)" Multiline="true"
									   FloatLabelType="FloatLabelType.Never" CssClass="custom-textbox" />
						</div>
					</div>
				</div>
			</div>

			<!-- Kitchens List Section -->
			<div class="section-card">
				<div class="section-header">
					<div class="section-title-wrapper">
						<svg class="section-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"
							 fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<path d="M9 11l3 3L22 4" />
							<path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11" />
						</svg>
						<h2 class="section-title">Kitchens List</h2>
					</div>
					<div class="header-actions">
						<ToggleButton Disabled="@_isProcessing" IsActive="@_showDeleted"
									  Variant="ToggleButton.ToggleVariant.Deleted" OnToggle="ToggleDeleted" />
					</div>
				</div>
				<div class="section-body grid-body">
					<SfGrid @ref="_sfGrid" DataSource="@_kitchens" AllowPaging="true" AllowSorting="true" AllowFiltering="true"
							AllowResizing="true" CssClass="professional-grid" Toolbar="@(new List<string>() { "Search" })">
						<GridPageSettings PageSize="20" PageSizes="@(new string[] { "20", "50", "100", "200", "All" })" />
						<GridFilterSettings Type="Syncfusion.Blazor.Grids.FilterType.Excel" />
						<GridColumns>
							<GridColumn HeaderText="Actions" Width="120" TextAlign="TextAlign.Center" AllowFiltering="false">
								<Template>
									@{
										var kitchen = (context as KitchenModel);

										<div class="grid-actions">
											@if (kitchen.Status)
											{
												<IconButton Icon="IconType.Edit" Variant="ButtonVariant.Edit" Size="ButtonSize.Grid" Title="Edit (Insert)" OnClick="@(() => OnEditKitchen(kitchen))" />
												<IconButton Icon="IconType.Delete" Variant="ButtonVariant.Delete" Size="ButtonSize.Grid" Title="Delete (Delete)" OnClick="@(() => ShowDeleteConfirmation(kitchen.Id, kitchen.Name))" />
											}
											else
											{
												<IconButton Icon="IconType.Recover" Variant="ButtonVariant.Recover" Size="ButtonSize.Grid" Title="Recover (Delete)" OnClick="@(() => ShowRecoverConfirmation(kitchen.Id, kitchen.Name))" />
											}
										</div>
									}
								</Template>
							</GridColumn>
							<GridColumn Field="@nameof(KitchenModel.Id)" HeaderText="ID" Width="80" TextAlign="TextAlign.Center" />
							<GridColumn Field="@nameof(KitchenModel.Name)" HeaderText="Kitchen Name" Width="300" />
							<GridColumn Field="@nameof(KitchenModel.Remarks)" HeaderText="Remarks" Width="400" />
							<GridColumn Field="@nameof(KitchenModel.Status)" HeaderText="Status" Width="100" TextAlign="TextAlign.Center">
								<Template>
									@{
										var kitchen = (context as KitchenModel);
										<div class="grid-checkbox"
											 style="@(kitchen.Status ? "color: #10b981; background: #d1fae5;" : "color: #dc2626; background: #fee2e2;")">
											@(kitchen.Status ? "✓" : "✗")
										</div>
									}
								</Template>
							</GridColumn>
						</GridColumns>
					</SfGrid>
				</div>
			</div>
		</div>

		<Footer />
	</div>
}

<DeleteConfirmationDialog @ref="_deleteConfirmationDialog"
						  EntityName="Kitchen"
						  IdentifierLabel="Kitchen Name"
						  IdentifierValue="@_deleteKitchenName"
						  IsPermanentDelete="false"
						  Disabled="@_isProcessing"
						  OnConfirm="ConfirmDelete"
						  OnCancel="CancelDelete" />

<RecoverConfirmationDialog @ref="_recoverConfirmationDialog"
						   EntityName="Kitchen"
						   IdentifierLabel="Kitchen Name"
						   IdentifierValue="@_recoverKitchenName"
						   Disabled="@_isProcessing"
						   OnConfirm="ConfirmRecover"
						   OnCancel="CancelRecover" />

<ToastNotification @ref="_toastNotification" />