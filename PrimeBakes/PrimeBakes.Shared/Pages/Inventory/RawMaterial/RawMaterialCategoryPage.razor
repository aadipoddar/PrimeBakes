@attribute [Route(PageRouteNames.RawMaterialCategory)]

@using PrimeBakesLibrary.Models.Inventory

<PageTitle>Raw Material Management - Prime Bakes</PageTitle>

@if (_isLoading)
{
    <AnimatedLoader Visible="true" />
}
else
{
    <div style="display: flex; flex-direction: column; min-height: 100vh;">
        <Header Title="Raw Material Category Management" Subtitle="Manage raw material categories and details" ShowLogout="true" ShowHome="true" ShowBack="true" OnHomeClick="NavigateToDashboard" OnBackClick="NavigateBack" OnLogoutClick="Logout">
            <RightContent>
                <IconButton Icon="IconType.Excel" Variant="ButtonVariant.Excel" Title="Export to Excel (Ctrl + E)" Disabled="_isProcessing" OnClick="ExportExcel" />
                <IconButton Icon="IconType.Pdf" Variant="ButtonVariant.Pdf" Title="Export to PDF (Ctrl + P)" Disabled="_isProcessing" OnClick="ExportPdf" />
                <IconButton Icon="IconType.Save" Variant="ButtonVariant.Save" Title="Save Raw Material Category (Ctrl + S)" Disabled="_isProcessing" OnClick="SaveRawMaterialCategory" />
                <IconButton Icon="IconType.New" Title="New Raw Material Category (Ctrl + N)" Disabled="_isProcessing" OnClick="ResetPage" />
            </RightContent>
        </Header>

        <!-- Main Content Container -->
        <div class="page-container">

            <!-- Kitchen Entry Section -->
            <div class="section-card">
                <div class="section-header">
                    <div class="section-title-wrapper">
                        <svg class="section-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"
                             fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M3 15v4c0 1.1.9 2 2 2h14a2 2 0 0 0 2-2v-4M17 9l-5 5-5-5M12 12.8V2.5" />
                        </svg>
                        <h2 class="section-title">Raw Material Category Details</h2>
                    </div>
                </div>
                <div class="section-body">
                    <div class="form-grid">
                        <!-- Kitchen Name -->
                        <div class="form-field">
                            <label class="field-label">
                                Raw Material Category Name <span class="required">*</span>
                            </label>
                            <SfTextBox @bind-Value="_rawMaterialCategory.Name" Placeholder="Enter raw material category name"
                                       FloatLabelType="FloatLabelType.Never" CssClass="custom-textbox" />
                        </div>

                        <!-- Remarks -->
                        <div class="form-field form-field-span-2">
                            <label class="field-label">Remarks</label>
                            <SfTextBox @bind-Value="_rawMaterialCategory.Remarks" Placeholder="Enter remarks (optional)" Multiline="true"
                                       FloatLabelType="FloatLabelType.Never" CssClass="custom-textbox" />
                        </div>
                    </div>
                </div>
            </div>

            <!-- Kitchens List Section -->
            <div class="section-card">
                <div class="section-header">
                    <div class="section-title-wrapper">
                        <svg class="section-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"
                             fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M9 11l3 3L22 4" />
                            <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11" />
                        </svg>
                        <h2 class="section-title">Raw Material Categories List</h2>
                    </div>
                    <div class="header-actions">
                        <ToggleButton Disabled="@_isProcessing" IsActive="@_showDeleted"
                                      Variant="ToggleButton.ToggleVariant.Deleted" OnToggle="ToggleDeleted" />
                    </div>
                </div>
                <div class="section-body grid-body">
                    <SfGrid @ref="_sfGrid" DataSource="@_rawMaterialCategories" AllowPaging="true" AllowSorting="true" AllowFiltering="true"
                            AllowResizing="true" CssClass="professional-grid" Toolbar="@(new List<string>() { "Search" })">
                        <GridPageSettings PageSize="20" PageSizes="@(new string[] { "20", "50", "100", "200", "All" })" />
                        <GridFilterSettings Type="Syncfusion.Blazor.Grids.FilterType.Excel" />
                        <GridColumns>
                            <GridColumn HeaderText="Actions" Width="120" TextAlign="TextAlign.Center" AllowFiltering="false">
                                <Template>
                                    @{
                                        var rawMaterialCategory = (context as RawMaterialCategoryModel);

                                        <div class="grid-actions">
                                            @if (rawMaterialCategory.Status)
                                            {
                                                <IconButton Icon="IconType.Edit" Variant="ButtonVariant.Edit" Size="ButtonSize.Grid" Title="Edit (Insert)" OnClick="@(() => OnEditRawMaterialCategory(rawMaterialCategory))" />
                                                <IconButton Icon="IconType.Delete" Variant="ButtonVariant.Delete" Size="ButtonSize.Grid" Title="Delete (Delete)" OnClick="@(() => ShowDeleteConfirmation(rawMaterialCategory.Id, rawMaterialCategory.Name))" />
                                            }
                                            else
                                            {
                                                <IconButton Icon="IconType.Recover" Variant="ButtonVariant.Recover" Size="ButtonSize.Grid" Title="Recover (Delete)" OnClick="@(() => ShowRecoverConfirmation(rawMaterialCategory.Id, rawMaterialCategory.Name))" />
                                            }
                                        </div>
                                    }
                                </Template>
                            </GridColumn>
                            <GridColumn Field="@nameof(RawMaterialCategoryModel.Id)" HeaderText="ID" Width="80"
                                        TextAlign="TextAlign.Center" />
                            <GridColumn Field="@nameof(RawMaterialCategoryModel.Name)" HeaderText="Category Name" Width="300" />
                            <GridColumn Field="@nameof(RawMaterialCategoryModel.Remarks)" HeaderText="Remarks" Width="400" />
                            <GridColumn Field="@nameof(RawMaterialCategoryModel.Status)" HeaderText="Status" Width="100"
                                        TextAlign="TextAlign.Center">
                                <Template>
                                    @{
                                        var rawMaterialCategory = (context as RawMaterialCategoryModel);
                                        <div class="grid-checkbox"
                                             style="@(rawMaterialCategory.Status ? "color: #10b981; background: #d1fae5;" : "color: #dc2626; background: #fee2e2;")">
                                            @(rawMaterialCategory.Status ? "✓" : "✗")
                                        </div>
                                    }
                                </Template>
                            </GridColumn>
                        </GridColumns>
                    </SfGrid>
                </div>
            </div>
        </div>

        <Footer />
    </div>
}

<DeleteConfirmationDialog @ref="_deleteConfirmationDialog"
                          EntityName="Raw Material Category"
                          IdentifierLabel="Raw Material Category Name"
                          IdentifierValue="@_deleteRawMaterialCategoryName"
                          IsPermanentDelete="false"
                          Disabled="@_isProcessing"
                          OnConfirm="ConfirmDelete"
                          OnCancel="CancelDelete" />

<RecoverConfirmationDialog @ref="_recoverConfirmationDialog"
                           EntityName="Raw Material Category"
                           IdentifierLabel="Raw Material Category Name"
                           IdentifierValue="@_recoverRawMaterialCategoryName"
                           Disabled="@_isProcessing"
                           OnConfirm="ConfirmRecover"
                           OnCancel="CancelRecover" />

<ToastNotification @ref="_toastNotification" />