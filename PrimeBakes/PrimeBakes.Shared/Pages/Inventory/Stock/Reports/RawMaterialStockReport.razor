@attribute [Route(PageRouteNames.RawMaterialStockReport)]

@using PrimeBakesLibrary.Models.Accounts.Masters
@using PrimeBakesLibrary.Models.Operations
@using PrimeBakesLibrary.Models.Inventory
@using PrimeBakesLibrary.Models.Inventory.Stock

<PageTitle>Raw Material Stock Report - Prime Bakes</PageTitle>

@if (_isLoading)
{
	<AnimatedLoader Visible="true" />
}
else
{
	<div style="display: flex; flex-direction: column; min-height: 100vh;">
		<Header Title="Raw Material Stock Report" Subtitle="View and analyze raw material stock" ShowHome="true" ShowBack="true" ShowLogout="true" OnHomeClick="NavigateToDashboard" OnBackClick="NavigateBack" OnLogoutClick="Logout">
			<RightContent>
				<IconButton Icon="IconType.Excel" Variant="ButtonVariant.Excel" Title="Export to Excel (Ctrl + E)" Disabled="_isProcessing" OnClick="ExportExcel" />
				<IconButton Icon="IconType.Pdf" Variant="ButtonVariant.Pdf" Title="Export to PDF (Ctrl + P)" Disabled="_isProcessing" OnClick="ExportPdf" />
				<IconButton Icon="IconType.Refresh" Title="Refresh Data (Ctrl + R)" Disabled="_isProcessing" OnClick="LoadStockData" />
				<IconButton Icon="IconType.New" Title="New Transaction (Ctrl + N)" Disabled="_isProcessing" OnClick="NavigateToTransactionPage" />
			</RightContent>
		</Header>

		<!-- Main Content Container -->
		<div class="page-container">

			<!-- Filters Section -->
			<div class="section-card">
				<div class="section-header">
					<div class="section-title-wrapper">
						<svg class="section-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"
							 fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3" />
						</svg>
						<h2 class="section-title">Filters</h2>
					</div>
				</div>
				<div class="section-body">
					<div class="filters-container">
						<div class="filters-grid">
							<!-- Date Range -->
							<div class="form-field">
								<label class="field-label">Date Range</label>
								<SfDateRangePicker CssClass="custom-daterange" StartDate="_fromDate" EndDate="_toDate"
												   TValue="DateTime" Format="dd/MM/yyyy" AllowEdit="true" Placeholder="Select date range">
									<DateRangePickerEvents TValue="DateTime" ValueChange="OnDateRangeChanged" />
								</SfDateRangePicker>
							</div>
						</div>

						<!-- Date Utility Buttons -->
						<DateRangeButtons Disabled="_isProcessing" FromDate="_fromDate" ToDate="_toDate"
										  OnDatesChanged="HandleDatesChanged" ToastNotification="_toastNotification" />
					</div>
				</div>
			</div>

			<!-- Report Grid Section -->
			<div class="section-card">
				<div class="section-header">
					<div class="section-title-wrapper">
						<svg class="section-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"
							 fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<line x1="8" y1="6" x2="21" y2="6" />
							<line x1="8" y1="12" x2="21" y2="12" />
							<line x1="8" y1="18" x2="21" y2="18" />
							<line x1="3" y1="6" x2="3.01" y2="6" />
							<line x1="3" y1="12" x2="3.01" y2="12" />
							<line x1="3" y1="18" x2="3.01" y2="18" />
						</svg>
						<h2 class="section-title">Raw Material Stock Summary</h2>
					</div>
					<div class="header-actions">
						<ToggleButton Disabled="@_isProcessing" IsActive="@_showAllColumns"
									  Variant="ToggleButton.ToggleVariant.Details" TextWhenActive="Show Less"
									  TextWhenInactive="All Columns" OnToggle="ToggleColumnsView" />
						<ToggleButton Disabled="@_isProcessing" IsActive="@_showDetails"
									  Variant="ToggleButton.ToggleVariant.Details" TextWhenActive="Hide Details"
									  TextWhenInactive="Transaction Details" OnToggle="ToggleDetailsView" />
					</div>
				</div>
				<div class="section-body grid-body">
					<SfGrid ID="_sfStockGrid" @ref="_sfStockGrid" TValue="RawMaterialStockSummaryModel"
							DataSource="_stockSummary" AllowTextWrap="true" AllowPaging="true" AllowSorting="true"
							AllowResizing="true" AllowFiltering="true" AllowExcelExport="true" AllowPdfExport="true"
							GridLines="GridLine.Horizontal" CssClass="professional-grid" AllowGrouping="true"
							Toolbar="@(new List<string>() { "Search" })">

						<GridGroupSettings ShowDropArea="true" ShowGroupedColumn="true" ShowUngroupButton="true" />
						<GridPageSettings PageSize="20" PageSizes="@(new string[] { "10", "20", "50", "100", "All" })" />
						<GridFilterSettings Type="Syncfusion.Blazor.Grids.FilterType.Excel" />

						<GridAggregates>
							<GridAggregate>
								<GridAggregateColumns>
									<GridAggregateColumn Field="@nameof(RawMaterialStockSummaryModel.RawMaterialName)"
														 Type="AggregateType.Count">
										<FooterTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
											}
											<div class="aggregate-label">
												<strong>Total Items: @aggregate.Count</strong>
											</div>
										</FooterTemplate>
										<GroupFooterTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
											}
											<div class="aggregate-label">
												<strong>Total Items: @aggregate.Count</strong>
											</div>
										</GroupFooterTemplate>
										<GroupCaptionTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
											}
											<div class="aggregate-label">
												<strong>Total Items: @aggregate.Count</strong>
											</div>
										</GroupCaptionTemplate>
									</GridAggregateColumn>
									<GridAggregateColumn Field="@nameof(RawMaterialStockSummaryModel.OpeningStock)"
														 Type="AggregateType.Sum" Format="N2">
										<FooterTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
												<div><strong>@aggregate.Sum</strong></div>
											}
										</FooterTemplate>
										<GroupFooterTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
												<div><strong>@aggregate.Sum</strong></div>
											}
										</GroupFooterTemplate>
										<GroupCaptionTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
												<div><strong>@aggregate.Sum</strong></div>
											}
										</GroupCaptionTemplate>
									</GridAggregateColumn>
									<GridAggregateColumn Field="@nameof(RawMaterialStockSummaryModel.PurchaseStock)"
														 Type="AggregateType.Sum" Format="N2">
										<FooterTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
												<div><strong>@aggregate.Sum</strong></div>
											}
										</FooterTemplate>
										<GroupFooterTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
												<div><strong>@aggregate.Sum</strong></div>
											}
										</GroupFooterTemplate>
										<GroupCaptionTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
												<div><strong>@aggregate.Sum</strong></div>
											}
										</GroupCaptionTemplate>
									</GridAggregateColumn>
									<GridAggregateColumn Field="@nameof(RawMaterialStockSummaryModel.SaleStock)"
														 Type="AggregateType.Sum" Format="N2">
										<FooterTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
												<div><strong>@aggregate.Sum</strong></div>
											}
										</FooterTemplate>
										<GroupFooterTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
												<div><strong>@aggregate.Sum</strong></div>
											}
										</GroupFooterTemplate>
										<GroupCaptionTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
												<div><strong>@aggregate.Sum</strong></div>
											}
										</GroupCaptionTemplate>
									</GridAggregateColumn>
									<GridAggregateColumn Field="@nameof(RawMaterialStockSummaryModel.MonthlyStock)"
														 Type="AggregateType.Sum" Format="N2">
										<FooterTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
												<div><strong>@aggregate.Sum</strong></div>
											}
										</FooterTemplate>
										<GroupFooterTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
												<div><strong>@aggregate.Sum</strong></div>
											}
										</GroupFooterTemplate>
										<GroupCaptionTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
												<div><strong>@aggregate.Sum</strong></div>
											}
										</GroupCaptionTemplate>
									</GridAggregateColumn>
									<GridAggregateColumn Field="@nameof(RawMaterialStockSummaryModel.ClosingStock)"
														 Type="AggregateType.Sum" Format="N2">
										<FooterTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
												<div><strong>@aggregate.Sum</strong></div>
											}
										</FooterTemplate>
										<GroupFooterTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
												<div><strong>@aggregate.Sum</strong></div>
											}
										</GroupFooterTemplate>
										<GroupCaptionTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
												<div><strong>@aggregate.Sum</strong></div>
											}
										</GroupCaptionTemplate>
									</GridAggregateColumn>
									<GridAggregateColumn Field="@nameof(RawMaterialStockSummaryModel.ClosingValue)"
														 Type="AggregateType.Sum" Format="N2">
										<FooterTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
												<div class="aggregate-value aggregate-total"><strong>@aggregate.Sum</strong></div>
											}
										</FooterTemplate>
										<GroupFooterTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
												<div class="aggregate-value aggregate-total"><strong>@aggregate.Sum</strong></div>
											}
										</GroupFooterTemplate>
										<GroupCaptionTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
												<div class="aggregate-value aggregate-total"><strong>@aggregate.Sum</strong></div>
											}
										</GroupCaptionTemplate>
									</GridAggregateColumn>
									<GridAggregateColumn Field="@nameof(RawMaterialStockSummaryModel.WeightedAverageValue)"
														 Type="AggregateType.Sum" Format="N2">
										<FooterTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
												<div><strong>@aggregate.Sum</strong></div>
											}
										</FooterTemplate>
										<GroupFooterTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
												<div><strong>@aggregate.Sum</strong></div>
											}
										</GroupFooterTemplate>
										<GroupCaptionTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
												<div><strong>@aggregate.Sum</strong></div>
											}
										</GroupCaptionTemplate>
									</GridAggregateColumn>
									<GridAggregateColumn Field="@nameof(RawMaterialStockSummaryModel.LastPurchaseValue)"
														 Type="AggregateType.Sum" Format="N2">
										<FooterTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
												<div><strong>@aggregate.Sum</strong></div>
											}
										</FooterTemplate>
										<GroupFooterTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
												<div><strong>@aggregate.Sum</strong></div>
											}
										</GroupFooterTemplate>
										<GroupCaptionTemplate>
											@{
												var aggregate = (context as AggregateTemplateContext);
												<div><strong>@aggregate.Sum</strong></div>
											}
										</GroupCaptionTemplate>
									</GridAggregateColumn>
								</GridAggregateColumns>
							</GridAggregate>
						</GridAggregates>

						<GridColumns>
							<GridColumn Field="@nameof(RawMaterialStockSummaryModel.RawMaterialCode)" HeaderText="Code" Width="120" Visible="_showAllColumns" />
							<GridColumn Field="@nameof(RawMaterialStockSummaryModel.RawMaterialName)" HeaderText="Raw Material" Width="250" />
							<GridColumn Field="@nameof(RawMaterialStockSummaryModel.RawMaterialCategoryName)" HeaderText="Category" Width="180" Visible="_showAllColumns" />
							<GridColumn Field="@nameof(RawMaterialStockSummaryModel.UnitOfMeasurement)" HeaderText="UOM" Width="100" TextAlign="TextAlign.Center" />
							<GridColumn Field="@nameof(RawMaterialStockSummaryModel.OpeningStock)" HeaderText="Opening Stock" Width="150" Format="N2" TextAlign="TextAlign.Right" />
							<GridColumn Field="@nameof(RawMaterialStockSummaryModel.PurchaseStock)" HeaderText="Purchase" Width="130" Format="N2" TextAlign="TextAlign.Right" />
							<GridColumn Field="@nameof(RawMaterialStockSummaryModel.SaleStock)" HeaderText="Sale" Width="130" Format="N2" TextAlign="TextAlign.Right" />
							<GridColumn Field="@nameof(RawMaterialStockSummaryModel.MonthlyStock)" HeaderText="Monthly Stock" Width="150" Format="N2" TextAlign="TextAlign.Right" Visible="_showAllColumns" />
							<GridColumn Field="@nameof(RawMaterialStockSummaryModel.ClosingStock)" HeaderText="Closing Stock" Width="150" Format="N2" TextAlign="TextAlign.Right">
								<Template>
									@{
										var item = (context as RawMaterialStockSummaryModel);
										<span class="@(item.ClosingStock < 0 ? "grid-debit" : "")">@item.ClosingStock.ToString("N2")</span>
									}
								</Template>
							</GridColumn>
							<GridColumn Field="@nameof(RawMaterialStockSummaryModel.Rate)" HeaderText="Rate" Width="120"
										Format="N2" TextAlign="TextAlign.Right" />
							<GridColumn Field="@nameof(RawMaterialStockSummaryModel.ClosingValue)" HeaderText="Closing Value"
										Width="150" Format="N2" TextAlign="TextAlign.Right">
								<Template>
									@{
										var item = (context as RawMaterialStockSummaryModel);
										<span class="grid-total">@item.ClosingValue.ToString("N2")</span>
									}
								</Template>
							</GridColumn>

							<GridColumn Field="@nameof(RawMaterialStockSummaryModel.AveragePrice)" HeaderText="Avg Price" Width="130" Format="N2" TextAlign="TextAlign.Right" Visible="_showAllColumns" />
							<GridColumn Field="@nameof(RawMaterialStockSummaryModel.WeightedAverageValue)" HeaderText="Weighted Avg Value" Width="180" Format="N2" TextAlign="TextAlign.Right" Visible="_showAllColumns" />
							<GridColumn Field="@nameof(RawMaterialStockSummaryModel.LastPurchasePrice)" HeaderText="Last Purchase Price" Width="170" Format="N2" TextAlign="TextAlign.Right" Visible="_showAllColumns" />
							<GridColumn Field="@nameof(RawMaterialStockSummaryModel.LastPurchaseValue)" HeaderText="Last Purchase Value" Width="180" Format="N2" TextAlign="TextAlign.Right" Visible="_showAllColumns" />
						</GridColumns>
					</SfGrid>
				</div>
			</div>

			<!-- Stock Details Grid Section (Visible when _showDetails is true) -->
			@if (_showDetails)
			{
				<div class="section-card">
					<div class="section-header">
						<div class="section-title-wrapper">
							<svg class="section-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"
								 fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
								<path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
								<polyline points="14 2 14 8 20 8"></polyline>
								<line x1="16" y1="13" x2="8" y2="13"></line>
								<line x1="16" y1="17" x2="8" y2="17"></line>
								<polyline points="10 9 9 9 8 9"></polyline>
							</svg>
							<h2 class="section-title">Stock Details (Transaction Level)</h2>
						</div>
					</div>
					<div class="section-body grid-body">
						<SfGrid ID="_sfStockDetailsGrid" @ref="_sfStockDetailsGrid" TValue="RawMaterialStockDetailsModel"
								DataSource="_stockDetails" AllowTextWrap="true" AllowPaging="true" AllowSorting="true"
								AllowResizing="true" AllowFiltering="true" AllowExcelExport="true" AllowPdfExport="true"
								GridLines="GridLine.Horizontal" CssClass="professional-grid" AllowGrouping="true"
								Toolbar="@(new List<string>() { "Search" })">

							<GridGroupSettings ShowDropArea="true" ShowGroupedColumn="true" ShowUngroupButton="true" />
							<GridPageSettings PageSize="20" PageSizes="@(new string[] { "10", "20", "50", "100", "All" })" />
							<GridFilterSettings Type="Syncfusion.Blazor.Grids.FilterType.Excel" />

							<GridAggregates>
								<GridAggregate>
									<GridAggregateColumns>
										<GridAggregateColumn Field="@nameof(RawMaterialStockDetailsModel.RawMaterialName)"
															 Type="AggregateType.Count">
											<FooterTemplate>
												@{
													var aggregate = (context as AggregateTemplateContext);
												}
												<div class="aggregate-label">
													<strong>Total Transactions: @aggregate.Count</strong>
												</div>
											</FooterTemplate>
											<GroupFooterTemplate>
												@{
													var aggregate = (context as AggregateTemplateContext);
												}
												<div class="aggregate-label">
													<strong>Total Transactions: @aggregate.Count</strong>
												</div>
											</GroupFooterTemplate>
											<GroupCaptionTemplate>
												@{
													var aggregate = (context as AggregateTemplateContext);
												}
												<div class="aggregate-label">
													<strong>Total Transactions: @aggregate.Count</strong>
												</div>
											</GroupCaptionTemplate>
										</GridAggregateColumn>
										<GridAggregateColumn Field="@nameof(RawMaterialStockDetailsModel.Quantity)"
															 Type="AggregateType.Sum" Format="N2">
											<FooterTemplate>
												@{
													var aggregate = (context as AggregateTemplateContext);
													<div><strong>@aggregate.Sum</strong></div>
												}
											</FooterTemplate>
											<GroupFooterTemplate>
												@{
													var aggregate = (context as AggregateTemplateContext);
													<div><strong>@aggregate.Sum</strong></div>
												}
											</GroupFooterTemplate>
											<GroupCaptionTemplate>
												@{
													var aggregate = (context as AggregateTemplateContext);
													<div><strong>@aggregate.Sum</strong></div>
												}
											</GroupCaptionTemplate>
										</GridAggregateColumn>
									</GridAggregateColumns>
								</GridAggregate>
							</GridAggregates>

							<GridColumns>
								<GridColumn HeaderText="Actions" Width="150" TextAlign="TextAlign.Center">
									<Template>
										@{
											var item = (context as RawMaterialStockDetailsModel);
										}
										<div class="grid-actions">
											@if (item.TransactionId is null && item.Type?.ToLower() == "adjustment")
											{
												<IconButton Icon="IconType.Delete" Variant="ButtonVariant.Delete" Size="ButtonSize.Grid" Title="Delete Transaction (Delete)" Disabled="_isProcessing" OnClick="@(() => ShowDeleteConfirmation(item.Id, item.TransactionNo))" />
											}
											@if (item.TransactionId is not null && item.Type?.ToLower() != "adjustment")
											{
												<IconButton Icon="IconType.View" Variant="ButtonVariant.View" Size="ButtonSize.Grid" Title="View Transaction (Ctrl + O)" Disabled="_isProcessing" OnClick="@(() => ViewTransaction(item.Type, item.TransactionId.Value))" />
												<IconButton Icon="IconType.Excel" Variant="ButtonVariant.Excel" Size="ButtonSize.Grid" Title="Download Excel Invoice (Alt+E)" Disabled="_isProcessing" OnClick="@(() => DownloadExcelInvoice(item.Type, item.TransactionId.Value))" />
												<IconButton Icon="IconType.Pdf" Variant="ButtonVariant.Pdf" Size="ButtonSize.Grid" Title="Download PDF Invoice (Alt+P)" Disabled="_isProcessing" OnClick="@(() => DownloadPdfInvoice(item.Type, item.TransactionId.Value))" />
											}
										</div>
									</Template>
								</GridColumn>
								<GridColumn Field="@nameof(RawMaterialStockDetailsModel.TransactionDateTime)" HeaderText="Date" Width="130" Format="dd/MM/yyyy" Type="ColumnType.Date" />
								<GridColumn Field="@nameof(RawMaterialStockDetailsModel.TransactionNo)" HeaderText="Transaction No" Width="180" />
								<GridColumn Field="@nameof(RawMaterialStockDetailsModel.Type)" HeaderText="Type" Width="150">
									<Template>
										@{
											var item = (context as RawMaterialStockDetailsModel);
											<span class="transaction-type transaction-type-@item.Type.ToLower().Replace(" ", "-")">
												@item.Type
											</span>
										}
									</Template>
								</GridColumn>
								<GridColumn Field="@nameof(RawMaterialStockDetailsModel.RawMaterialCode)" HeaderText="Code" Width="120" />
								<GridColumn Field="@nameof(RawMaterialStockDetailsModel.RawMaterialName)" HeaderText="Raw Material" Width="250" />
								<GridColumn Field="@nameof(RawMaterialStockDetailsModel.Quantity)" HeaderText="Qty" Width="130" Format="N2" TextAlign="TextAlign.Right">
									<Template>
										@{
											var item = (context as RawMaterialStockDetailsModel);
											<span class="@(item.Quantity < 0 ? "grid-debit" : "grid-credit")">
												@item.Quantity.ToString("N2")
											</span>
										}
									</Template>
								</GridColumn>
								<GridColumn Field="@nameof(RawMaterialStockDetailsModel.NetRate)" HeaderText="Rate" Width="120" Format="N2" TextAlign="TextAlign.Right" />
							</GridColumns>
						</SfGrid>
					</div>
				</div>
			}

		</div>

		<Footer />
	</div>
}

<DeleteConfirmationDialog @ref="_deleteConfirmationDialog"
						  EntityName="Stock Adjustment"
						  IdentifierLabel="Transaction No"
						  IdentifierValue="@_deleteTransactionNo"
						  IsPermanentDelete="true"
						  Disabled="@_isProcessing"
						  OnConfirm="ConfirmDelete"
						  OnCancel="CancelDelete" />

<ToastNotification @ref="_toastNotification" />

<style>
	/* Page-Specific: Transaction Type Badges */
	.transaction-type {
		display: inline-block;
		padding: 4px 12px;
		border-radius: 6px;
		font-size: 12px;
		font-weight: 600;
		text-transform: capitalize;
	}

	.transaction-type-purchase {
		background: #d1fae5;
		color: #065f46;
	}

	.transaction-type-purchasereturn {
		background: #fee2e2;
		color: #991b1b;
	}

	.transaction-type-sale {
		background: #dbeafe;
		color: #1e40af;
	}

	.transaction-type-salereturn {
		background: #fef3c7;
		color: #92400e;
	}

	.transaction-type-adjustment {
		background: #e9d5ff;
		color: #6b21a8;
	}

	.transaction-type-kitchenissue {
		background: #fce7f3;
		color: #9f1239;
	}

	.transaction-type-kitchenproduction {
		background: #cffafe;
		color: #155e75;
	}

	/* Stock Transfer */
	.transaction-type-stocktransfer {
		background: #ccfbf1;
		color: #0f766e;
	}
</style>