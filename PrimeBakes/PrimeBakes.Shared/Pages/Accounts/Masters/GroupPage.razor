@attribute [Route(PageRouteNames.GroupMaster)]

@using PrimeBakesLibrary.Models.Accounts.Masters

<PageTitle>Group Management - Prime Bakes</PageTitle>

@if (_isLoading || _user is null)
{
    <AnimatedLoader Visible="true" />
}
else
{
    <div class="page-shell">
        <Header Title="Group Management" Subtitle="Manage groups and details" ShowLogout="true" ShowHome="true"
                ShowBack="true" OnHomeClick="NavigateToDashboard" OnBackClick="NavigateBack" OnLogoutClick="Logout">
            <RightContent>
                <IconButton Icon="IconType.Excel" Variant="ButtonVariant.Excel" Title="Export to Excel (Ctrl + E)"
                            Disabled="_isProcessing" OnClick="ExportExcel" />
                <IconButton Icon="IconType.Pdf" Variant="ButtonVariant.Pdf" Title="Export to PDF (Ctrl + P)"
                            Disabled="_isProcessing" OnClick="ExportPdf" />
                <IconButton Icon="IconType.Save" Variant="ButtonVariant.Save" Title="Save Group (Ctrl + S)"
                            Disabled="_isProcessing" OnClick="SaveGroup" />
                <IconButton Icon="IconType.New" Title="New Group (Ctrl + N)" Disabled="_isProcessing" OnClick="ResetPage" />
            </RightContent>
        </Header>

        <!-- Main Content Container -->
        <div class="page-container">

            <!-- Group Entry Section -->
            <div class="section-card">
                <div class="section-header">
                    <div class="section-title-wrapper">
                        <svg class="section-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20"
                             viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                             stroke-linejoin="round">
                            <path d="M3 15v4c0 1.1.9 2 2 2h14a2 2 0 0 0 2-2v-4M17 9l-5 5-5-5M12 12.8V2.5" />
                        </svg>
                        <h2 class="section-title">Group Details</h2>
                    </div>
                </div>
                <div class="section-body">
                    <div class="form-grid">
                        <!-- Group Name -->
                        <div class="form-field">
                            <label class="field-label">
                                Group Name <span class="required">*</span>
                            </label>
                            <SfTextBox @bind-Value="_group.Name" Placeholder="Enter group name"
                                       FloatLabelType="FloatLabelType.Never" CssClass="custom-textbox" />
                        </div>

                        <!-- Nature -->
                        <div class="form-field">
                            <label class="field-label">
                                Nature <span class="required">*</span>
                            </label>
                            <SfDropDownList TValue="int" TItem="NatureModel" Placeholder="Select Nature"
                                            DataSource="@_natures" @bind-Value="_group.NatureId" FloatLabelType="FloatLabelType.Never"
                                            CssClass="custom-textbox">
                                <DropDownListFieldSettings Text="Name" Value="Id" />
                            </SfDropDownList>
                        </div>

                        <!-- Remarks -->
                        <div class="form-field">
                            <label class="field-label">Remarks</label>
                            <SfTextBox @bind-Value="_group.Remarks" Placeholder="Enter remarks (optional)" Multiline="true"
                                       FloatLabelType="FloatLabelType.Never" CssClass="custom-textbox" />
                        </div>
                    </div>
                </div>
            </div>

            <!-- Groups List Section -->
            <div class="section-card">
                <div class="section-header">
                    <div class="section-title-wrapper">
                        <svg class="section-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20"
                             viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                             stroke-linejoin="round">
                            <path d="M9 11l3 3L22 4" />
                            <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11" />
                        </svg>
                        <h2 class="section-title">Groups List</h2>
                    </div>
                    <div class="header-actions">
                        <ToggleButton Disabled="@_isProcessing" IsActive="@_showDeleted"
                                      Variant="ToggleButton.ToggleVariant.Deleted" OnToggle="ToggleDeleted" />
                    </div>
                </div>
                <div class="section-body grid-body">
                    <SfGrid @ref="_sfGrid" DataSource="@_groups" AllowPaging="true" AllowSorting="true"
                            AllowFiltering="true" AllowResizing="true" CssClass="professional-grid"
                            Toolbar="@(new List<string>() { "Search" })">
                        <GridPageSettings PageSize="20" PageSizes="@(new string[] { "20", "50", "100", "200", "All" })" />
                        <GridFilterSettings Type="Syncfusion.Blazor.Grids.FilterType.Excel" />
                        <GridColumns>
                            <GridColumn HeaderText="Actions" Width="120" TextAlign="TextAlign.Center"
                                        AllowFiltering="false">
                                <Template>
                                    @{
                                        var group = (context as GroupModel);

                                        <div class="grid-actions">
                                            @if (group.Status)
                                            {
                                                <IconButton Icon="IconType.Edit" Variant="ButtonVariant.Edit" Size="ButtonSize.Grid"
                                                            Title="Edit (Insert)" OnClick="@(() => OnEditGroup(group))" />
                                                <IconButton Icon="IconType.Delete" Variant="ButtonVariant.Delete"
                                                            Size="ButtonSize.Grid" Title="Delete (Delete)"
                                                            OnClick="@(() => ShowDeleteConfirmation(group.Id, group.Name))" />
                                            }
                                            else
                                            {
                                                <IconButton Icon="IconType.Recover" Variant="ButtonVariant.Recover"
                                                            Size="ButtonSize.Grid" Title="Recover (Delete)"
                                                            OnClick="@(() => ShowRecoverConfirmation(group.Id, group.Name))" />
                                            }
                                        </div>
                                    }
                                </Template>
                            </GridColumn>
                            <GridColumn Field="@nameof(GroupModel.Id)" HeaderText="ID" Width="80"
                                        TextAlign="TextAlign.Center" />
                            <GridColumn Field="@nameof(GroupModel.Name)" HeaderText="Group Name" Width="250" />
                            <GridColumn HeaderText="Nature" Width="200">
                                <Template>
                                    @{
                                        var group = (context as GroupModel);
                                        var nature = _natures.FirstOrDefault(n => n.Id == group.NatureId);
                                        <span>@(nature?.Name ?? "N/A")</span>
                                    }
                                </Template>
                            </GridColumn>
                            <GridColumn Field="@nameof(GroupModel.Remarks)" HeaderText="Remarks" Width="350" />
                            <GridColumn Field="@nameof(GroupModel.Status)" HeaderText="Status" Width="100"
                                        TextAlign="TextAlign.Center">
                                <Template>
                                    @{
                                        var group = (context as GroupModel);
                                        <div class="grid-checkbox"
                                             style="@(group.Status ? "color: #10b981; background: #d1fae5;" : "color: #dc2626; background: #fee2e2;")">
                                            @(group.Status ? "✓" : "✗")
                                        </div>
                                    }
                                </Template>
                            </GridColumn>
                        </GridColumns>
                    </SfGrid>
                </div>
            </div>
        </div>

        <Footer />
    </div>
}

<!-- Delete Confirmation Dialog -->
<DeleteConfirmationDialog @ref="_deleteConfirmationDialog" EntityName="Group" IdentifierLabel="Name"
                          IdentifierValue="@_deleteGroupName" IsPermanentDelete="false" Disabled="@_isProcessing" OnConfirm="ConfirmDelete"
                          OnCancel="CancelDelete" />

<!-- Recover Confirmation Dialog -->
<RecoverConfirmationDialog @ref="_recoverConfirmationDialog" EntityName="Group" IdentifierLabel="Name"
                           IdentifierValue="@_recoverGroupName" Disabled="@_isProcessing" OnConfirm="ConfirmRecover"
                           OnCancel="CancelRecover" />

<ToastNotification @ref="_toastNotification" />