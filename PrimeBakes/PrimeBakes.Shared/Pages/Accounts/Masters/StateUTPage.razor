@attribute [Route(PageRouteNames.StateUTMaster)]

@using PrimeBakesLibrary.Models.Accounts.Masters

<PageTitle>State/UT Management - Prime Bakes</PageTitle>

@if (_isLoading || _user is null)
{
    <AnimatedLoader Visible="true" />
}
else
{
    <div class="page-shell">
        <Header Title="State/UT Management" Subtitle="Manage states and union territories" ShowLogout="true" ShowHome="true"
                ShowBack="true" OnHomeClick="NavigateToDashboard" OnBackClick="NavigateBack" OnLogoutClick="Logout">
            <RightContent>
                <IconButton Icon="IconType.Excel" Variant="ButtonVariant.Excel" Title="Export to Excel (Ctrl + E)"
                            Disabled="_isProcessing" OnClick="ExportExcel" />
                <IconButton Icon="IconType.Pdf" Variant="ButtonVariant.Pdf" Title="Export to PDF (Ctrl + P)"
                            Disabled="_isProcessing" OnClick="ExportPdf" />
                <IconButton Icon="IconType.Save" Variant="ButtonVariant.Save" Title="Save State/UT (Ctrl + S)"
                            Disabled="_isProcessing" OnClick="SaveStateUT" />
                <IconButton Icon="IconType.New" Title="New State/UT (Ctrl + N)" Disabled="_isProcessing"
                            OnClick="ResetPage" />
            </RightContent>
        </Header>

        <!-- Main Content Container -->
        <div class="page-container">

            <!-- State/UT Entry Section -->
            <div class="section-card">
                <div class="section-header">
                    <div class="section-title-wrapper">
                        <svg class="section-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20"
                             viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                             stroke-linejoin="round">
                            <path d="M3 15v4c0 1.1.9 2 2 2h14a2 2 0 0 0 2-2v-4M17 9l-5 5-5-5M12 12.8V2.5" />
                        </svg>
                        <h2 class="section-title">State/UT Details</h2>
                    </div>
                </div>
                <div class="section-body">
                    <div class="form-grid">
                        <!-- State/UT Name -->
                        <div class="form-field">
                            <label class="field-label">State/UT Name <span class="required">*</span></label>
                            <SfTextBox @bind-Value="_stateUT.Name" Placeholder="Enter state/UT name"
                                       FloatLabelType="FloatLabelType.Never" CssClass="custom-textbox" />
                        </div>

                        <!-- Union Territory Checkbox -->
                        <div class="form-field">
                            <label class="field-label">Union Territory</label>
                            <div class="checkbox-wrapper">
                                <SfCheckBox @bind-Checked="_stateUT.UnionTerritory" Label="Is Union Territory"
                                            CssClass="custom-checkbox" />
                            </div>
                        </div>

                        <!-- Remarks -->
                        <div class="form-field">
                            <label class="field-label">Remarks</label>
                            <SfTextBox @bind-Value="_stateUT.Remarks" Placeholder="Enter remarks (optional)"
                                       Multiline="true" FloatLabelType="FloatLabelType.Never" CssClass="custom-textbox" />
                        </div>
                    </div>
                </div>
            </div>

            <!-- States/UTs List Section -->
            <div class="section-card">
                <div class="section-header">
                    <div class="section-title-wrapper">
                        <svg class="section-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20"
                             viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                             stroke-linejoin="round">
                            <path d="M9 11l3 3L22 4" />
                            <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11" />
                        </svg>
                        <h2 class="section-title">States/UTs List</h2>
                    </div>
                    <div class="header-actions">
                        <ToggleButton Disabled="@_isProcessing" IsActive="@_showDeleted"
                                      Variant="ToggleButton.ToggleVariant.Deleted" OnToggle="ToggleDeleted" />
                    </div>
                </div>
                <div class="section-body grid-body">
                    <SfGrid @ref="_sfGrid" DataSource="@_stateUTs" AllowPaging="true" AllowSorting="true"
                            AllowFiltering="true" AllowResizing="true" CssClass="professional-grid"
                            Toolbar="@(new List<string>() { "Search" })">
                        <GridPageSettings PageSize="20" PageSizes="@(new string[] { "20", "50", "100", "200", "All" })" />
                        <GridFilterSettings Type="Syncfusion.Blazor.Grids.FilterType.Excel" />
                        <GridColumns>
                            <GridColumn HeaderText="Actions" Width="120" TextAlign="TextAlign.Center"
                                        AllowFiltering="false">
                                <Template>
                                    @{
                                        var stateUT = (context as StateUTModel);

                                        <div class="grid-actions">
                                            @if (stateUT.Status)
                                            {
                                                <IconButton Icon="IconType.Edit" Variant="ButtonVariant.Edit" Size="ButtonSize.Grid"
                                                            Title="Edit (Insert)" OnClick="@(() => OnEditStateUT(stateUT))" />
                                                <IconButton Icon="IconType.Delete" Variant="ButtonVariant.Delete"
                                                            Size="ButtonSize.Grid" Title="Delete (Delete)"
                                                            OnClick="@(() => ShowDeleteConfirmation(stateUT.Id, stateUT.Name))" />
                                            }
                                            else
                                            {
                                                <IconButton Icon="IconType.Recover" Variant="ButtonVariant.Recover"
                                                            Size="ButtonSize.Grid" Title="Recover (Delete)"
                                                            OnClick="@(() => ShowRecoverConfirmation(stateUT.Id, stateUT.Name))" />
                                            }
                                        </div>
                                    }
                                </Template>
                            </GridColumn>
                            <GridColumn Field="@nameof(StateUTModel.Id)" HeaderText="ID" Width="80"
                                        TextAlign="TextAlign.Center" />
                            <GridColumn Field="@nameof(StateUTModel.Name)" HeaderText="State/UT Name" Width="250" />
                            <GridColumn Field="@nameof(StateUTModel.Remarks)" HeaderText="Remarks" Width="300" />
                            <GridColumn Field="@nameof(StateUTModel.UnionTerritory)" HeaderText="Union Territory"
                                        Width="150" TextAlign="TextAlign.Center">
                                <Template>
                                    @{
                                        var stateUT = (context as StateUTModel);
                                        <div class="grid-checkbox"
                                             style="@(stateUT.UnionTerritory ? "color: #10b981; background: #d1fae5;" : "color: #64748b; background: #f1f5f9;")">
                                            @(stateUT.UnionTerritory ? "✓" : "✗")
                                        </div>
                                    }
                                </Template>
                            </GridColumn>
                            <GridColumn Field="@nameof(StateUTModel.Status)" HeaderText="Status" Width="100"
                                        TextAlign="TextAlign.Center">
                                <Template>
                                    @{
                                        var stateUT = (context as StateUTModel);
                                        <div class="grid-checkbox"
                                             style="@(stateUT.Status ? "color: #10b981; background: #d1fae5;" : "color: #dc2626; background: #fee2e2;")">
                                            @(stateUT.Status ? "✓" : "✗")
                                        </div>
                                    }
                                </Template>
                            </GridColumn>
                        </GridColumns>
                    </SfGrid>
                </div>
            </div>
        </div>

        <Footer />
    </div>
}

<DeleteConfirmationDialog @ref="_deleteConfirmationDialog" EntityName="State/UT" IdentifierLabel="Name"
                          IdentifierValue="@_deleteStateUTName" IsPermanentDelete="false" Disabled="@_isProcessing" OnConfirm="ConfirmDelete"
                          OnCancel="CancelDelete" />

<RecoverConfirmationDialog @ref="_recoverConfirmationDialog" EntityName="State/UT" IdentifierLabel="Name"
                           IdentifierValue="@_recoverStateUTName" Disabled="@_isProcessing" OnConfirm="ConfirmRecover"
                           OnCancel="CancelRecover" />

<ToastNotification @ref="_toastNotification" />