@attribute [Route(PageRouteNames.AccountTypeMaster)]

@using PrimeBakesLibrary.Models.Accounts.Masters

<PageTitle>Account Type Management - Prime Bakes</PageTitle>

@if (_isLoading || _user is null)
{
    <AnimatedLoader Visible="true" />
}
else
{
    <div class="page-shell">
        <Header Title="Account Type Management" Subtitle="Manage account types and details" ShowLogout="true"
                ShowHome="true" ShowBack="true" OnHomeClick="NavigateToDashboard" OnBackClick="NavigateBack"
                OnLogoutClick="Logout">
            <RightContent>
                <IconButton Icon="IconType.Excel" Variant="ButtonVariant.Excel" Title="Export to Excel (Ctrl + E)"
                            Disabled="_isProcessing" OnClick="ExportExcel" />
                <IconButton Icon="IconType.Pdf" Variant="ButtonVariant.Pdf" Title="Export to PDF (Ctrl + P)"
                            Disabled="_isProcessing" OnClick="ExportPdf" />
                <IconButton Icon="IconType.Save" Variant="ButtonVariant.Save" Title="Save Account Type (Ctrl + S)"
                            Disabled="_isProcessing" OnClick="SaveAccountType" />
                <IconButton Icon="IconType.New" Title="New Account Type (Ctrl + N)" Disabled="_isProcessing"
                            OnClick="ResetPage" />
            </RightContent>
        </Header>

        <!-- Main Content Container -->
        <div class="page-container">

            <!-- Account Type Entry Section -->
            <div class="section-card">
                <div class="section-header">
                    <div class="section-title-wrapper">
                        <svg class="section-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20"
                             viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                             stroke-linejoin="round">
                            <path d="M3 15v4c0 1.1.9 2 2 2h14a2 2 0 0 0 2-2v-4M17 9l-5 5-5-5M12 12.8V2.5" />
                        </svg>
                        <h2 class="section-title">Account Type Details</h2>
                    </div>
                </div>
                <div class="section-body">
                    <div class="form-grid">
                        <!-- Account Type Name -->
                        <div class="form-field">
                            <label class="field-label">
                                Account Type Name <span class="required">*</span>
                            </label>
                            <SfTextBox @bind-Value="_accountType.Name" Placeholder="Enter account type name"
                                       FloatLabelType="FloatLabelType.Never" CssClass="custom-textbox" />
                        </div>

                        <!-- Remarks -->
                        <div class="form-field">
                            <label class="field-label">Remarks</label>
                            <SfTextBox @bind-Value="_accountType.Remarks" Placeholder="Enter remarks (optional)"
                                       Multiline="true" FloatLabelType="FloatLabelType.Never" CssClass="custom-textbox" />
                        </div>
                    </div>
                </div>
            </div>

            <!-- Account Types List Section -->
            <div class="section-card">
                <div class="section-header">
                    <div class="section-title-wrapper">
                        <svg class="section-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20"
                             viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                             stroke-linejoin="round">
                            <path d="M9 11l3 3L22 4" />
                            <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11" />
                        </svg>
                        <h2 class="section-title">Account Types List</h2>
                    </div>
                    <div class="header-actions">
                        <ToggleButton Disabled="@_isProcessing" IsActive="@_showDeleted"
                                      Variant="ToggleButton.ToggleVariant.Deleted" OnToggle="ToggleDeleted" />
                    </div>
                </div>
                <div class="section-body grid-body">
                    <SfGrid @ref="_sfGrid" DataSource="@_accountTypes" AllowPaging="true" AllowSorting="true"
                            AllowFiltering="true" AllowResizing="true" CssClass="professional-grid"
                            Toolbar="@(new List<string>() { "Search" })">
                        <GridPageSettings PageSize="20" PageSizes="@(new string[] { "20", "50", "100", "200", "All" })" />
                        <GridFilterSettings Type="Syncfusion.Blazor.Grids.FilterType.Excel" />
                        <GridColumns>
                            <GridColumn HeaderText="Actions" Width="120" TextAlign="TextAlign.Center"
                                        AllowFiltering="false">
                                <Template>
                                    @{
                                        var accountType = (context as AccountTypeModel);

                                        <div class="grid-actions">
                                            @if (accountType.Status)
                                            {
                                                <IconButton Icon="IconType.Edit" Variant="ButtonVariant.Edit" Size="ButtonSize.Grid"
                                                            Title="Edit (Insert)" OnClick="@(() => OnEditAccountType(accountType))" />
                                                <IconButton Icon="IconType.Delete" Variant="ButtonVariant.Delete"
                                                            Size="ButtonSize.Grid" Title="Delete (Delete)"
                                                            OnClick="@(() => ShowDeleteConfirmation(accountType.Id, accountType.Name))" />
                                            }
                                            else
                                            {
                                                <IconButton Icon="IconType.Recover" Variant="ButtonVariant.Recover"
                                                            Size="ButtonSize.Grid" Title="Recover (Delete)"
                                                            OnClick="@(() => ShowRecoverConfirmation(accountType.Id, accountType.Name))" />
                                            }
                                        </div>
                                    }
                                </Template>
                            </GridColumn>
                            <GridColumn Field="@nameof(AccountTypeModel.Id)" HeaderText="ID" Width="80"
                                        TextAlign="TextAlign.Center" />
                            <GridColumn Field="@nameof(AccountTypeModel.Name)" HeaderText="Account Type Name" Width="300" />
                            <GridColumn Field="@nameof(AccountTypeModel.Remarks)" HeaderText="Remarks" Width="400" />
                            <GridColumn Field="@nameof(AccountTypeModel.Status)" HeaderText="Status" Width="100"
                                        TextAlign="TextAlign.Center">
                                <Template>
                                    @{
                                        var accountType = (context as AccountTypeModel);
                                        <div class="grid-checkbox"
                                             style="@(accountType.Status ? "color: #10b981; background: #d1fae5;" : "color: #dc2626; background: #fee2e2;")">
                                            @(accountType.Status ? "✓" : "✗")
                                        </div>
                                    }
                                </Template>
                            </GridColumn>
                        </GridColumns>
                    </SfGrid>
                </div>
            </div>
        </div>

        <Footer />
    </div>
}

<DeleteConfirmationDialog @ref="_deleteConfirmationDialog" EntityName="Account Type" IdentifierLabel="Account Type Name"
                          IdentifierValue="@_deleteAccountTypeName" IsPermanentDelete="false" Disabled="@_isProcessing"
                          OnConfirm="ConfirmDelete" OnCancel="CancelDelete" />

<RecoverConfirmationDialog @ref="_recoverConfirmationDialog" EntityName="Account Type"
                           IdentifierLabel="Account Type Name" IdentifierValue="@_recoverAccountTypeName" Disabled="@_isProcessing"
                           OnConfirm="ConfirmRecover" OnCancel="CancelRecover" />

<ToastNotification @ref="_toastNotification" />