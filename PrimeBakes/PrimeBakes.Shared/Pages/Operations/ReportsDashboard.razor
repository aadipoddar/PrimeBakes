								</IconContent>
							</ButtonCard>

							<!-- Trial Balance -->
							<ButtonCard Title="Trial Balance" Description="View trial balance summary" Color="sky"
										OnClick="() => NavigationManager.NavigateTo(PageRouteNames.TrialBalanceReport)">
								<IconContent>
