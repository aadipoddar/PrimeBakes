<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrimeOrders.MainPage"
			 xmlns:control="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs">

	<ScrollView>
		<VerticalStackLayout
            Padding="30,0"
            Spacing="25"
			VerticalOptions="Center">

			<Label Text="Login"
                   FontSize="24"
                   HorizontalOptions="Center" />

			<control:SfNumericEntry x:Name="userIdNumericEntry"
									Placeholder="User Id"
									CustomFormat="0" AllowNull="True"
									Minimum="0" UpDownPlacementMode="Hidden"
									MaximumWidthRequest="200" MaximumHeightRequest="50">
			</control:SfNumericEntry>

			<Entry x:Name="passwordEntry"
					IsPassword="True"
					Placeholder="Password"
					MaximumWidthRequest="200"/>

			<Button Text="Login"
                    Clicked="OnLoginButtonClicked"
                    MaximumWidthRequest="200" />

		</VerticalStackLayout>
	</ScrollView>

</ContentPage>
